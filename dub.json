{
  "name": "retrograde",
  "description": "The Retrograde Game Engine",
  "authors": ["Mike Bierlee", "Lostmoment"],
  "license": "MIT",
  "copyright": "Copyright Mike Bierlee 2014-2023",
  "dflags": ["-betterC"],
  "targetPath": "bin",
  "configurations": [
    {
      "name": "runtime",
      "targetType": "executable",
      "versions": ["runtime"]
    },
    {
      "name": "library",
      "targetType": "library"
    },
    {
      "name": "wasm",
      "targetType": "executable",
      "dflags-ldc2": ["-fvisibility=hidden", "-betterC"],
      "lflags-ldc2": ["-allow-undefined"],
      "versions": ["runtime"]
    },
    {
      "name": "unittest",
      "targetType": "library",
      "sourcePaths": ["source"],
      "importPaths": ["source"]
    }
  ],
  "buildTypes": {
    "release-O3": {
      "buildOptions": ["releaseMode"],
      "dflags-ldc2": ["-O3"]
    }
  }
}
